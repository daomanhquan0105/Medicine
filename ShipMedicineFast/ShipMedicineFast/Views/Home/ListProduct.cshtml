@section scripts{
    <script>
        function ShowProductTable() {
            $(".show-table").toggleClass('active animate__backInLeft animate__slow');
            $(".show-ballot").toggleClass('active animate__backInLeft animate__slow');
            $('.navbar .nav-item.nav-show-table').toggleClass('active');
            $('.navbar .nav-item.nav-show-ballot  ').toggleClass('active');
        }
        function ShowProductBallot() { 
            $(".show-table").toggleClass('active animate__backInLeft animate__slow');
            $(".show-ballot").toggleClass('active animate__backInLeft animate__slow');
            $('.navbar .nav-item.nav-show-table').toggleClass('active');
            $('.navbar .nav-item.nav-show-ballot').toggleClass('active');
        }
    </script>   
 }