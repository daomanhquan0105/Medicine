
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container payment">
    <div class="bread-crumb">
        <a href=""class="btn-link ">Giỏ hàng</a>
        <a href="" >thông tin thanh toán</a>
        <a href="" >Giao hàng</a>
        <span>Thanh toán</span>
    </div>
    <div class="row justify-content-center">
        <div class="col-10 col-md-7">
            <form>
                <div class="communications">
                    Thông tin liên hệ
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Email hoặc số điện thoại của bạn">
                </div>
                <div class="form-check form-group change-style">
                    <input type="checkbox">
                    <label >Nhận tin tức và ưu đãi mới nhất</label>
                </div>
                <div class="Delivery-Address">
                    Địa chỉ nhận hàng
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="email" class="form-control" placeholder="Tên">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="password" class="form-control" placeholder="Họ">
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Địa chỉ">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Khu căn hộ, số nhà,.. (Tùy chọn)">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Thành phố">
                </div>
                <div class="form-check form-group change-style mb-3 mb-lg-5">
                    <input   type="checkbox"  >
                    <label>
                        Lưu thông tin cho lần mua hàng tiếp theo
                    </label>
                </div>
                <a href="#" class="btn btn-link">
                    <i class="far fa-chevron-left mr-2"></i> Quay lại giỏ hàng
                </a>
            </form>
        </div>
        <div class="col-10 col-md-5">
            <table class="mb-5 mb-lg-3" id="tablelist">
                <thead>
                    <tr>
                        <th>Sản phẩm</th> 
                        <th class="text-center">Số lượng</th>
                        <th class="text-right">Tổng</th> 
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="media">
                                <a href="#"><img src="~/Images/Medicines/4.svg" class="mr-3" /></a>
                                <div class="media-body align-self-center">
                                    <div class="name">
                                        Apfu
                                    </div>
                                    <div class="price">
                                        <span>Mã sản phẩm: 00011354 </span><br />
                                        <span>Hộp 1 vỉ x 10 viên</span>
                                    </div>
                                </div>
                            </div>
                        </td> 
                        <td class="text-center"> 5 </td>
                        <td class="text-right">130 000</td> 
                    </tr>
                    <tr>
                        <td>
                            <div class="media">
                                <a href="#"><img src="~/Images/Medicines/4.svg" class="mr-3" /></a>
                                <div class="media-body align-self-center">
                                    <div class="name">
                                        Bpfu
                                    </div>
                                    <div class="price">
                                        <span>Mã sản phẩm: 00011354 </span><br />
                                        <span>Hộp 1 vỉ x 10 viên</span>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="text-center"> 4 </td>
                        <td class="text-right">130 000</td>
                    </tr>
                </tbody>
            </table>
            <div class="payment-information">
                <div class="quantity-product-buy mb-3">
                    Tạm tính (3 sản phẩm)  <span class="float-right">1.254.000 đ</span>
                </div>
                <div class="price-ship">
                    Phí giao hàng   <span class="float-right">30.0000 đ</span>
                </div>
                <div class="sum">
                    Tổng cộng    <span class="float-right">295.000 đ</span>
                </div>
                <div class="vat">
                    Đã bao gồm VAT (nếu có)
                </div>
                <button class="btn btn-block btn-submit-pay">THANH TOAN </button>
            </div>
        </div>
    </div>
</div>

